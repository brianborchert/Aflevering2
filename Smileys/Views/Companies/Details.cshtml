@model Smileys.Models.CompanySmileyViewModel

@{
    ViewData["Title"] = "Detaljer";
}

<h1>Detaljer</h1>
<div>
    <hr />
    <dl class="row">
@foreach (var item in Model.Companies!) {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies![0].Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies![0].CVR)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.CVR)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies![0].Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies![0].HouseNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.HouseNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies![0].ZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.ZipCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies![0].City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies![0].Smileys)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.Smileys)
        </dd>
        <dt class="col-sm-2">
            Nuværende smiley
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(modelItem => Model.CompanyIDsAndSmileyPaths![item.Id][0])" />
        </dd>
        <dt class="col-sm-2">
            3 foregående smileys
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(modelItem => Model.CompanyIDsAndSmileyPaths![item.Id][1])" />
            <img src="@Html.DisplayFor(modelItem => Model.CompanyIDsAndSmileyPaths![item.Id][2])" />
            <img src="@Html.DisplayFor(modelItem => Model.CompanyIDsAndSmileyPaths![item.Id][3])" />
        </dd>
}
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Companies![0].Id">Redigér</a> |
    <a asp-action="Index">Tilbage til oversigten</a>
</div>
